<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
 
<body style="background: #DEEDF1">
    <div id="main-navigation" class="menu-wrapper navbar navbar-fixed-top" style="left: 0px; width: 160px;">

        <div class="main-menu text-center" style="padding-top: 20px;">
            <div class="language-select">
                <img class="img-responsive img-center img-skew-right " src="~/Images/PhuketLogo.png" alt="">
            </div>

            <div class="nav text-center">
                <ul style="list-style: none;    -webkit-padding-start: 0px;">
                    <li>

                        <div class="container text-center">
                            <div>
                                @*class="navbar-header"*@
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="text-center nav navbar-nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("News", "About", "Home")</li>
                                <li><p><a href="http://asp.net" class="btn btn-success btn-sm">Donate Now &raquo;</a></p></li>
                                <li>@Html.ActionLink("Events", "Contact", "Home")</li>
                                <li>@Html.ActionLink("Sponsors", "Contact", "Home")</li>
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Gallery", "Contact", "Home")</li>
                            </ul>
                            @*@Html.Partial("_LoginPartial")*@
                        </div>
                    </div>
                </li>


            </ul>
        </div>

    </div> <!-- .main-menu -->
</div>

<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Phuket has been good to us!</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
